<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ramusthastudio.myasynctaskloader.MainActivity">

  <EditText
      android:id="@+id/edit_kota"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/id_jakarta_bandung_semararang"
      android:hint="@string/masukkan_nama_kota"
      android:layout_weight="0.8" app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintEnd_toStartOf="@+id/btn_kota" app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="8dp"/>
  <Button
      android:id="@+id/btn_kota"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/cari"
      android:layout_weight="0.2"
      app:layout_constraintStart_toEndOf="@+id/edit_kota" android:layout_marginStart="8dp"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
      app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

  <ListView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:id="@+id/listView" app:layout_constraintTop_toBottomOf="@+id/edit_kota"
      android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>
